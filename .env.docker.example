# Docker Environment Variables
# Copy this file to .env.docker and fill in the values

# ===========================================
# Application Settings
# ===========================================
APP_NAME="Tutoring System"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:your-app-key-here
APP_URL=http://localhost
APP_TIMEZONE=UTC

# ===========================================
# Database Configuration
# ===========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=tutoring_system
DB_USERNAME=tutoring
DB_PASSWORD=your-secure-password
DB_ROOT_PASSWORD=your-root-password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# ===========================================
# Cache & Session
# ===========================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ===========================================
# Mail Configuration
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tutoring-system.com
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost/api

# ===========================================
# Sentry Error Monitoring
# ===========================================
SENTRY_LARAVEL_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# ===========================================
# SMS Configuration (optional)
# ===========================================
SMS_PROVIDER=log
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER_ID=TUTORING

# ===========================================
# Firebase Configuration (optional)
# ===========================================
FIREBASE_PROJECT_ID=
FIREBASE_CREDENTIALS_PATH=storage/app/firebase-credentials.json

# ===========================================
# Google OAuth (optional)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/api/auth/google/callback
