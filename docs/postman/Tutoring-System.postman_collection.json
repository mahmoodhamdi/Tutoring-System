              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"phone\": \"01099999999\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"role\": \"student\"\n}"
